#File: fuzzybugcontroller.fll
Engine: ObstacleAvoidance
InputVariable: ObstacleDirection
  enabled: true
  range: -1.6 1.6
  lock-range: false
  term: right Ramp 160 300
  term: center Triangle 150 160 170
  term: left Ramp 0 150

InputVariable: ObstacleDistance
  enabled: true
  range: 0 10
  lock-range: false
  term: farrigth Ramp 200 300
  term: rigth Ramp 170 200
  term: straigt Triangle 150 160 170
  term: left Ramp 100 150
  term: farleft Ramp 0 100

