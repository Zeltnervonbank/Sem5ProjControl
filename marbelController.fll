OutputVariable: Speed
  enabled: true
  range: -1 1
  lock-range: false
  aggregation: Maximum
  defuzzifier: Centroid 100
  default: 0
  lock-previous: false
  term: backward Ramp  0.1 -1
  term: forward  Ramp  -0.1 1


RuleBlock: mamdani
  enabled: true
  conjunction: Minimum
  disjunction: Maximum
  implication: Minimum
  activation: General
  rule: if ObstacleDistance is straigth then SteerDirection is straight
  rule: if ObstacleDistance is left then SteerDirection is right
  rule: if ObstacleDistance is farleft then SteerDirection is sharpright
  rule: if ObstacleDistance is rigth then SteerDirection is left
  rule: if ObstacleDistance is farrigth then SteerDirection is sharpleft
  rule: if ObstacleDistance is straigth then Speed is forward
